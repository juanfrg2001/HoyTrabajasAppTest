<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <% if controller_name != 'sessions' %>
        <%= link_to "Logueate", new_session_path(resource_name), class: "btn btn-primary btn-block mb-3" %>
      <% end %>

      <% if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Registrate", new_registration_path(resource_name), class: "btn btn-primary btn-block mb-3" %>
      <% end %>

      <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Olvidaste tu contraseÃ±a?", new_password_path(resource_name), class: "btn-block mb-3" %>
      <% end %>

      <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "btn btn btn-primary btn-block mb-3" %>
      <% end %>

      <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
        <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "btn btn-secondary btn-block mb-3" %>
      <% end %>

      <% if devise_mapping.omniauthable? %>
        <% resource_class.omniauth_providers.each do |provider| %>
          <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post, class: "btn btn-outline-dark btn-block mb-3", data: { turbo: false } %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

